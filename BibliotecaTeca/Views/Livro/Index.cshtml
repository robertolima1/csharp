@{
    ViewData["Title"] = "Home";
}
@model List<Livro>;
<h3>Teca</h3>
<div>
    <a asp-action="cadastro"
       class="btn">Adicionar</a>
    <!-- Para passasr o produto que vai ser adicionado-->
</div>

<div>
    @foreach(Livro livro in Model) {
    <div class="cold-md-3 col-sm-3 col-lg-3">
        <span>
            @livro.Nome
        </span>
        <span>
            @livro.Preco
        </span>
        <span>
            @livro.Quantidade
        </span>
        <a asp-action="editar"
            asp-route-id = "@livro.Id"
           class="btn">Editar</a>
        <a 
            asp-action="excluir" 
            asp-route-id = "@livro.Id"
            class="btn">Excluir</a>
    </div>
    }
</div>