@model BibliotecaTeca.Models.Livro

@{
    ViewData["Title"] = "Cadastro";
}

<h2>Cadastro</h2>

<h4>Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Livro" asp-action="CadastroItem" method="post">
