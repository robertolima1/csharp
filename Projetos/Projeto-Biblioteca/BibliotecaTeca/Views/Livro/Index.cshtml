@{
    ViewData["Title"] = "Home";
}
@model List<Livro>;
<h3>Teca</h3>
<div>
    <a asp-action="cadastro"
       class="btn">Adicionar</a>
    <!-- Para passasr o produto que vai ser adicionado-->
</div>

<div>
    @foreach(Livro livro in Model) {
    <div class="cold-md-3 col-sm-3 col-lg-3">
        <div>
            <span>
                @livro.Nome
            </span>
        </div>
        <div>
            <span>
                @livro.Preco
            </span>
        </div>
        <div>
            <span>
                @livro.Quantidade
            </span>
        </div>
        <a asp-action="Alugar"
           asp-route-id="@livro.Id"
           class="btn">Alugar</a>        
        <a asp-action="Editar"
            asp-route-id = "@livro.Id"
           class="btn">Editar</a>
        <a
            asp-action="Excluir"
            asp-route-id = "@livro.Id"
            class="btn">Excluir</a>
    </div>
    }
</div>